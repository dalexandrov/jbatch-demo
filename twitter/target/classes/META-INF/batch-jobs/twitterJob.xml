<?xml version="1.0" encoding="UTF-8"?>
<job id="twitterJob" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/jobXML_1_0.xsd" version="1.0">
    <step id="extractTwits" next="analizeSplit">
        <chunk item-count="3">
            <reader ref="twitterReader"/>
            <processor ref="twitterProcessor"/>
            <writer ref="twitterWriter"/>
        </chunk>    
    </step>
    <split id="analizeSplit">
        <flow id="flow1">
            <step id="analizeTwitsLikes" >
                <chunk item-count="3">
                    <reader ref="analyseReader"/>
                    <processor ref="likeProcessor"/>
                    <writer ref="likeAnalyseWriter"/>
                </chunk>
            </step>
        </flow>
        <flow id="flow2">
            <step id="analizeTwitsHates" >
                <chunk item-count="3">
                    <reader ref="analyseReader"/>
                    <processor ref="hateProcessor"/>
                    <writer ref="hateAnalyseWriter"/>
                </chunk>
            </step>
        </flow>
    </split>
</job>

